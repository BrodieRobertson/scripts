#!/bin/sh
ShortName="BAT\nLBC\nTRX\nADA"

if [ ! -d ~/.cache/crypto ]; then
	mkdir ~/.cache/crypto
fi

echo "$ShortName" | while read coin
do
	price=$(curl rate.sx/1$coin)
	if [ $coin = "BAT" ]; then
		icon=ðŸ¦
	elif [ $coin = "LBC" ]; then
		icon=ðŸ“–
	elif [ $coin = "TRX" ]; then
		icon=ðŸ”º
	elif [ $coin = "ADA" ]; then
		icon=âš›ï¸
	fi

	echo "$icon $coin: $price" > ~/.cache/crypto/$coin

done

date > ~/.cache/crypto/time

